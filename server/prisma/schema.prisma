datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id       String @id @default(auto()) @map("_id") @db.ObjectId
    email    String @unique
    password String
    Task     Task[]
}

model Task {
    id          String  @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    description String?
    status      String
    file        File?
    user        User    @relation(fields: [userID], references: [id])
    userID      String  @db.ObjectId
}

type File {
    url  String?
    name String?
}
